	<dependOn>3delight</dependOn>
	<set key="HFS">$DRD_SOFTWARE_EXT/houdini/$DRD_PLATFORM/hfs9.5.343</set>
	<set key="EPA_WORKINGDIR">$HFS/bin</set>
	<set key="EPA_CMDLINE">./hmaster</set>
	<set key="EPA_ICON">$HFS/houdini_logo.png</set>
	<set key="H">$HFS</set>
	<set key="HH">$H/houdini</set>
	<set key="HDSO">$H/dsolib</set>
	<set key="HB">$H/bin</set>
	<set key="HD">$H/demo</set>
	<set key="HHC">$HH/config</set>
	<set key="HT">$H/toolkit</set>
	<set key="HSB">$HH/sbin</set>
	<set key="HSITE">=$DRD_SOFTWARE_INT/houdini</set>
	<set key="HOUDINI_MAJOR_RELEASE">=9</set>
	<set key="HOUDINI_MINOR_RELEASE">=5</set>
	<set key="HOUDINI_BUILD_VERSION">=192</set>
	<set key="HOUDINI_VERSION">=$HOUDINI_MAJOR_RELEASE.$HOUDINI_MINOR_RELEASE.$HOUDINI_BUILD_VERSION</set>
