	<set key="SESI_LMHOST">houdinilic01</set>
	<add key="LD_LIBRARY_PATH">$HDSO</add>
	<add key="PATH">$HB</add>
	<add key="PATH">$HSB</add>
	<add key="PATH">$HH/scripts/python</add>
	<add key="PYTHONPATH">$HH/scripts/python</add>
	<add key="PYTHONPATH">$HH/scripts/pythonlibs</add>
