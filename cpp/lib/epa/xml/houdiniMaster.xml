	<set key="HOUDINI_BUILD_COMPILER">"4.1.2"</set>
	<set key="HOUDINI_BUILD_LIBC">"glibc 2.3.6"</set>
	<set key="HOUDINI_RI_SHADERPATH">$HH/ri_shaders:$HSITE/houdini9.5/ri_shaders:$DL_SHADERS_PATH</set>
	<set key="HOUDINI_DEFAULT_RIB_RENDERER">3Delight6.5</set>
	<set key="HOUDINI_VIEW_RMAN">renderdl</set>
	<set key="DL_DISPLAYS_PATH">$DRD_SOFTWARE_INT/d_houdini/v_hfs9.1.350:$DL_DISPLAYS_PATH</set>
